{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Train DQN Agent GUI",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/minesweeper/solver/dqn_agent.py",
                "--gui",
                "-r 9",
                "-c 9",
                "-m 10",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
